# =============================================================================
# STRAPI + NEXTJS DOCKER STARTER - ENVIRONMENT CONFIGURATION
# =============================================================================

# Project Configuration
PROJECT_SLUG=my-strapi-nextjs-app
PROJECT_NAME="My Strapi NextJS App"
PROJECT_VERSION=1.0.0

# Environment Settings
NODE_ENV=development
ENVIRONMENT=development

# Timezone Settings
TIMEZONE=UTC

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Settings
POSTGRES_USER=strapi
POSTGRES_PASSWORD=strapi_password_secure
POSTGRES_DB=strapidb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Strapi Database Configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=${POSTGRES_HOST}
DATABASE_PORT=${POSTGRES_PORT}
DATABASE_NAME=${POSTGRES_DB}
DATABASE_USERNAME=${POSTGRES_USER}
DATABASE_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_SSL=false

# =============================================================================
# STRAPI BACKEND CONFIGURATION
# =============================================================================

# Strapi Server Settings
STRAPI_HOST=0.0.0.0
STRAPI_PORT=1337
STRAPI_URL=http://localhost:1337

# Strapi Admin Settings
ADMIN_JWT_SECRET=your-admin-jwt-secret-key-here
ENCRYPTION_KEY=your-jwt-secret-key-here
API_TOKEN_SALT=your-api-token-salt-here
APP_KEYS=your-app-keys-here,another-app-key-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here

# Strapi Security
STRAPI_CORS_ORIGIN=http://localhost:3000,http://localhost:1337

# =============================================================================
# NEXTJS FRONTEND CONFIGURATION
# =============================================================================

# Next.js Server Settings
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:1337
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_TAG_MANAGER=GTM-XXXXXXX

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container Settings
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Port Mappings
POSTGRES_PORT_EXTERNAL=5432
STRAPI_PORT_EXTERNAL=1337
NEXTJS_PORT_EXTERNAL=3000
NGINX_PORT_EXTERNAL=80
NGINX_SSL_PORT_EXTERNAL=443

# =============================================================================
# PRODUCTION SETTINGS (Override for production)
# =============================================================================

# Uncomment and modify for production
# NODE_ENV=production
# ENVIRONMENT=production
# STRAPI_URL=https://your-domain.com
# NEXT_PUBLIC_FRONTEND_URL=https://your-domain.com
# NEXT_PUBLIC_API_URL=https://your-domain.com/api
# STRAPI_CORS_ORIGIN=https://your-domain.com
# DATABASE_SSL=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Level
LOG_LEVEL=info

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup
ENABLE_BACKUP=true
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
